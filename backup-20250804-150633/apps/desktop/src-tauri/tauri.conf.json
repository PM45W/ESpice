{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ESpice",
  "version": "1.0.0",
  "identifier": "com.espice.app",
  "build": {
    "beforeDevCommand": "cd ../.. && npm run dev",
    "devUrl": "http://localhost:5176",
    "beforeBuildCommand": "cd ../.. && npm run build",
    "frontendDist": "../../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ESpice - SPICE Model Generator",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "decorations": true,
        "transparent": false,
        "fullscreen": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "ESpice Technologies",
    "copyright": "Copyright (c) 2025 ESpice Technologies. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "Professional SPICE Model Generator for Semiconductor Devices",
    "longDescription": "ESpice is a professional application for generating SPICE models from semiconductor datasheet parameters. It supports GaN-HEMT, SiC-MOSFET, and Si-MOSFET devices with export to LTSpice, KiCad, and generic SPICE formats."
  }
}

  "dependencies": {
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^4.0.1",
    "express-rate-limit": "^7.4.1",
    "prisma": "^5.22.0",
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "aws-sdk": "^2.1691.0",
    "nodemailer": "^6.9.12",
    "winston": "^3.15.0",
    "dotenv": "^16.4.5",
    "joi": "^17.13.3",
    "uuid": "^11.0.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.14",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.6.3",
    "tsx": "^4.19.2",
    "nodemon": "^3.1.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.3",
    "supertest": "^7.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
